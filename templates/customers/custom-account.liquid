{% comment %}
  Custom Account Page
  This replaces the default main-account section.
{% endcomment %}

<div class="account-wrapper">
  <div class="account-sidebar">
    <ul>
      <li><a href="/account">Dashboard</a></li>
      <li><a href="/account/orders">Orders</a></li>
      <li><a href="/account/addresses">Addresses</a></li>
      <li><a href="/account/logout">Log out</a></li>
    </ul>
  </div>

  <div class="account-content">
    <h2>Welcome back, {{ customer.first_name }}!</h2>

    <div class="account-block">
      <h3>Your Info</h3>
      <p><strong>Email:</strong> {{ customer.email }}</p>
      <p><a href="/account/addresses">Manage addresses</a></p>
    </div>

    <div class="account-block">
      <h3>Recent Orders</h3>
      {% if customer.orders_count > 0 %}
        <ul>
          {% for order in customer.orders limit:5 %}
            <li>
              <a href="{{ order.customer_url }}">Order #{{ order.name }}</a> â€“ {{ order.financial_status }}
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <p>No orders yet.</p>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .account-wrapper {
    display: flex;
    gap: 2rem;
  }
  .account-sidebar {
    width: 220px;
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 6px;
  }
  .account-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .account-sidebar li {
    margin-bottom: 0.75rem;
  }
  .account-sidebar a {
    text-decoration: none;
    color: #333;
    font-weight: 500;
  }
  .account-content {
    flex: 1;
  }
  .account-block {
    margin-bottom: 2rem;
    padding: 1rem;
    border: 1px solid #e2e2e2;
    border-radius: 6px;
    background: #fff;
  }
</style>
