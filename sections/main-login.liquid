<!-- templates/customers/login.liquid -->

<div class="login-page">
  <div class="page-width">
    
    <!-- Welcome Header -->
    <div class="login-header">
      <h1>Welcome Back</h1>
      <p>Sign in to your account or join Jockey to start shopping</p>
    </div>

    <!-- Main Login Section -->
    <div class="login-container">
      
      <!-- Sign In Section -->
      <div class="signin-box">
        <div class="auth-header">
          <h2>Sign In</h2>
        </div>

        <div class="form-success hide" id="ResetSuccess">
          {{ 'customer.recover_password.success' | t }}
        </div>

        <div id="CustomerLoginForm">
          {% form 'customer_login' %}

            {%- if section.settings.enable_shop_login_button -%}
              <div class="shop-login">
                {{- shop | login_button -}}
                <div class="divider-text">
                  <span>{{ 'customer.login.alternate_provider_separator' | t }}</span>
                </div>
              </div>
            {%- endif -%}

            {{ form.errors | default_errors }}

            <div class="input-group">
              <label for="CustomerEmail">{{ 'customer.login.email' | t }}</label>
              <input type="email"
                    name="customer[email]"
                    id="CustomerEmail"
                    class="input-field {% if form.errors contains 'email' %}input-error{% endif %}"
                    placeholder="Enter your email address"
                    spellcheck="false"
                    autocomplete="email"
                    autocapitalize="off">
            </div>

            {% if form.password_needed %}
              <div class="input-group">
                <label for="CustomerPassword">{{ 'customer.login.password' | t }}</label>
                <input type="password"
                      name="customer[password]"
                      id="CustomerPassword"
                      class="input-field {% if form.errors contains 'password' %}input-error{% endif %}"
                      placeholder="Enter your password">
              </div>
            {% endif %}

            <div class="forgot-password">
              <a href="#" id="RecoverPassword">Forgot Your Password?</a>
            </div>

            <div class="form-submit">
              <input type="submit" class="btn btn-primary" value="Sign In">
            </div>

          {% endform %}
        </div>

        <!-- Password Recovery Form -->
        <div id="RecoverPasswordForm" class="hide">
          <div class="auth-header">
            <h3>Reset Your Password</h3>
            <p>Enter your email address and we'll send you a link to reset your password.</p>
          </div>

          {% form 'recover_customer_password' %}
            {{ form.errors | default_errors }}

            {% if form.posted_successfully? %}
              <span class="hide reset-password-success"></span>
            {% endif %}

            <div class="input-group">
              <label for="RecoverEmail">{{ 'customer.recover_password.email' | t }}</label>
              <input type="email"
                    name="email"
                    id="RecoverEmail"
                    class="input-field"
                    placeholder="Enter your email address"
                    spellcheck="false"
                    autocomplete="email"
                    autocapitalize="off">
            </div>

            <div class="form-submit">
              <input type="submit" class="btn btn-primary" value="Send Reset Link">
            </div>

            <div class="back-link">
              <a href="#" id="HideRecoverPasswordLink">‚Üê Back to Sign In</a>
            </div>
          {% endform %}
        </div>
      </div>

      <!-- Join Jockey CTA Section -->
      <div class="join-cta-box">
        <h2>New to Jockey?</h2>
        <div class="benefits-preview">
          <h3>Join and enjoy:</h3>
          <ul class="benefits-preview-list">
            <li><span class="icon">üí∞</span> 10% off all the time</li>
            <li><span class="icon">üöö</span> Free shipping</li>
            <li><span class="icon">üì¶</span> Easy order tracking</li>
          </ul>
        </div>
        
        <button class="btn btn-success btn-join" id="openJoinModal">
          Join Jockey
        </button>
        
        <p class="join-note">Plus exclusive access to member-only sales!</p>
      </div>
    </div>

    <!-- Guest Checkout -->
    {% if shop.checkout.guest_login %}
      <div class="guest-section">
        <div class="divider-text">
          <span>Or</span>
        </div>
        
        <div class="guest-box">
          <h3>Continue as Guest</h3>
          <p>Shop without creating an account</p>
          {% form 'guest_login' %}
            <input type="submit" class="btn btn-outline" value="Continue as Guest">
          {% endform %}
        </div>
      </div>
    {% endif %}

    <!-- Return Link -->
    <div class="return-link">
      <a href="{{ routes.root_url }}">‚Üê Return to Store</a>
    </div>

  </div>

  <!-- Join Jockey Modal Popup -->
  <div id="joinModal" class="modal-overlay">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Join Jockey</h2>
        <button class="modal-close" id="closeModal">&times;</button>
      </div>
      
      <div class="modal-body">
        <div class="benefits-header">
          <div class="benefits-box">
            <h3>Benefits include</h3>
            <ul class="benefits-list">
              <li><span class="icon">üí∞</span> <strong>10% off all the time</strong></li>
              <li><span class="icon">üöö</span> <strong>Free shipping</strong></li>
              <li><span class="icon">üì¶</span> <strong>Easy order tracking</strong></li>
            </ul>
          </div>
        </div>

        {% form 'create_customer' %}
          {{ form.errors | default_errors }}

          <div class="name-fields">
            <div class="input-group half">
              <label for="RegisterFirstName">First Name</label>
              <input type="text"
                    name="customer[first_name]"
                    id="RegisterFirstName"
                    class="input-field {% if form.errors contains 'first_name' %}input-error{% endif %}"
                    placeholder="First name"
                    value="{{ form.first_name }}">
            </div>

            <div class="input-group half">
              <label for="RegisterLastName">Last Name</label>
              <input type="text"
                    name="customer[last_name]"
                    id="RegisterLastName"
                    class="input-field {% if form.errors contains 'last_name' %}input-error{% endif %}"
                    placeholder="Last name"
                    value="{{ form.last_name }}">
            </div>
          </div>

          <div class="input-group">
            <label for="RegisterEmail">Email Address</label>
            <input type="email"
                  name="customer[email]"
                  id="RegisterEmail"
                  class="input-field {% if form.errors contains 'email' %}input-error{% endif %}"
                  placeholder="Enter your email address"
                  spellcheck="false"
                  autocomplete="email"
                  autocapitalize="off"
                  value="{{ form.email }}">
          </div>

          <div class="input-group">
            <label for="RegisterPassword">Password</label>
            <input type="password"
                  name="customer[password]"
                  id="RegisterPassword"
                  class="input-field {% if form.errors contains 'password' %}input-error{% endif %}"
                  placeholder="Create a password">
            <small class="password-help">Password must be at least 5 characters long</small>
          </div>

          <div class="checkbox-group">
            <label class="checkbox-label">
              <input type="checkbox" name="customer[accepts_marketing]" id="RegisterMarketing" {% if form.accepts_marketing %}checked{% endif %}>
              I'd like to receive exclusive offers and updates via email
            </label>
          </div>

          <div class="form-submit">
            <input type="submit" class="btn btn-success btn-fullwidth" value="Create Account">
          </div>

          <div class="terms">
            <small>By creating an account, you agree to our Terms of Service and Privacy Policy.</small>
          </div>

        {% endform %}
      </div>
    </div>
  </div>
</div>

<script>
// Simple vanilla JavaScript for modal and password recovery
(function() {
  // Modal functionality
  var joinModal = document.getElementById('joinModal');
  var openModalBtn = document.getElementById('openJoinModal');
  var closeModalBtn = document.getElementById('closeModal');

  // Open modal
  if (openModalBtn && joinModal) {
    openModalBtn.onclick = function(e) {
      e.preventDefault();
      joinModal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
      return false;
    };
  }

  // Close modal
  function closeModal() {
    if (joinModal) {
      joinModal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  }

  if (closeModalBtn) {
    closeModalBtn.onclick = closeModal;
  }

  // Close modal when clicking outside
  if (joinModal) {
    joinModal.onclick = function(e) {
      if (e.target === joinModal) {
        closeModal();
      }
    };
  }

  // Close modal with Escape key
  document.onkeydown = function(e) {
    if (e.key === 'Escape' || e.keyCode === 27) {
      closeModal();
    }
  };

  // Password recovery toggle
  var recoverLink = document.getElementById('RecoverPassword');
  var hideRecoverLink = document.getElementById('HideRecoverPasswordLink');
  var loginForm = document.getElementById('CustomerLoginForm');
  var recoverForm = document.getElementById('RecoverPasswordForm');

  if (recoverLink && recoverForm && loginForm) {
    recoverLink.onclick = function(e) {
      e.preventDefault();
      loginForm.classList.add('hide');
      recoverForm.classList.remove('hide');
      return false;
    };
  }

  if (hideRecoverLink && recoverForm && loginForm) {
    hideRecoverLink.onclick = function(e) {
      e.preventDefault();
      recoverForm.classList.add('hide');
      loginForm.classList.remove('hide');
      return false;
    };
  }

  // Check if reset was successful
  var resetSuccess = document.querySelector('.reset-password-success');
  var resetSuccessDiv = document.getElementById('ResetSuccess');
  if (resetSuccess && resetSuccessDiv) {
    resetSuccessDiv.classList.remove('hide');
  }

  // Auto-open modal if there are registration errors
  var modalForm = joinModal ? joinModal.querySelector('form') : null;
  if (modalForm && modalForm.querySelector('.errors')) {
    setTimeout(function() {
      joinModal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }, 100);
  }
})();
</script>

