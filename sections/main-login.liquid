<!-- templates/customers/login.liquid -->

<div class="container">
  <div class="page-width large-row">
    
    <!-- Welcome Header -->
    <div class="login-header">
      <h1 class="welcome-title">Welcome Back</h1>
      <p class="welcome-subtitle">Sign in to your account or create a new one to continue shopping</p>
    </div>

    <div class="auth-wrapper">
      <!-- Form Toggle Tabs -->
      <div class="auth-tabs">
        <button class="auth-tab active" data-tab="signin">Sign In</button>
        <button class="auth-tab" data-tab="signup">Create Account</button>
      </div>

      <!-- Main Authentication Section -->
      <div class="auth-forms-container">
        
        <!-- Sign In Form -->
        <div class="auth-form-section active" id="signin-section">
          <div class="form-success hide" id="ResetSuccess">
            {{ 'customer.recover_password.success' | t }}
          </div>

          <div id="CustomerLoginForm">
            {% form 'customer_login' %}
              {%- if section.settings.enable_shop_login_button -%}
                <div class="text-center shop-login-section">
                  {{- shop | login_button -}}
                  <p class="separator">
                    {{ 'customer.login.alternate_provider_separator' | t }}
                  </p>
                </div>
              {%- endif -%}

              {{ form.errors | default_errors }}

              <div class="input-wrapper form-row">
                <label for="CustomerEmail">
                  Email Address
                </label>
                <input type="email"
                      name="customer[email]"
                      id="CustomerEmail"
                      class="form-input {% if form.errors contains 'email' %}input-error{% endif %}"
                      spellcheck="false"
                      autocomplete="email"
                      autocapitalize="off"
                      placeholder="Enter your email address">
              </div>

              {% if form.password_needed %}
                <div class="input-wrapper form-row">
                  <label for="CustomerPassword">
                    Password
                  </label>
                  <input type="password"
                        name="customer[password]"
                        id="CustomerPassword"
                        class="form-input {% if form.errors contains 'password' %}input-error{% endif %}"
                        placeholder="Enter your password">
                </div>
              {% endif %}

              <div class="form-options">
                <a href="#recover" class="forgot-password-link" id="RecoverPassword">
                  Forgot Your Password?
                </a>
              </div>

              <div class="form-action">
                <input type="submit" class="btn btn--primary btn--fullwidth" value="Sign In">
              </div>

            {% endform %}
          </div>

          <!-- Password Recovery Form -->
          <div id="RecoverPasswordForm" class="hide">
            <div class="recover-header">
              <h3 class="recover-title">Reset Your Password</h3>
              <p class="recover-subtitle">Enter your email address and we'll send you a link to reset your password.</p>
            </div>

            {% form 'recover_customer_password' %}
              {{ form.errors | default_errors }}

              {% if form.posted_successfully? %}
                <span class="hide reset-password-success"></span>
              {% endif %}

              <div class="input-wrapper form-row">
                <label for="RecoverEmail">
                  Email Address
                </label>
                <input type="email"
                      name="email"
                      id="RecoverEmail"
                      class="form-input"
                      spellcheck="false"
                      autocomplete="email"
                      autocapitalize="off"
                      placeholder="Enter your email address">
              </div>

              <div class="form-action">
                <input type="submit" class="btn btn--primary btn--fullwidth" value="Send Reset Link">
              </div>

              <div class="form-footer">
                <a href="#" id="HideRecoverPasswordLink" class="back-to-login-link">
                  ‚Üê Back to Sign In
                </a>
              </div>
            {% endform %}
          </div>
        </div>

        <!-- Create Account Form -->
        <div class="auth-form-section" id="signup-section">
          
          <div class="signup-benefits-header">
            <h3 class="benefits-title">Join Jockey - Benefits include:</h3>
            <ul class="benefits-list-inline">
              <li class="benefit-item-inline">
                <span class="benefit-icon">üí∞</span>
                <span>10% off all the time</span>
              </li>
              <li class="benefit-item-inline">
                <span class="benefit-icon">üöö</span>
                <span>Free shipping</span>
              </li>
              <li class="benefit-item-inline">
                <span class="benefit-icon">üì¶</span>
                <span>Easy order tracking</span>
              </li>
            </ul>
          </div>

          {% form 'create_customer' %}
            
            {{ form.errors | default_errors }}

            <div class="form-grid">
              <div class="input-wrapper">
                <label for="RegisterFirstName">
                  First Name
                </label>
                <input type="text"
                      name="customer[first_name]"
                      id="RegisterFirstName"
                      class="form-input {% if form.errors contains 'first_name' %}input-error{% endif %}"
                      placeholder="Enter your first name"
                      value="{{ form.first_name }}">
              </div>

              <div class="input-wrapper">
                <label for="RegisterLastName">
                  Last Name
                </label>
                <input type="text"
                      name="customer[last_name]"
                      id="RegisterLastName"
                      class="form-input {% if form.errors contains 'last_name' %}input-error{% endif %}"
                      placeholder="Enter your last name"
                      value="{{ form.last_name }}">
              </div>
            </div>

            <div class="input-wrapper form-row">
              <label for="RegisterEmail">
                Email Address
              </label>
              <input type="email"
                    name="customer[email]"
                    id="RegisterEmail"
                    class="form-input {% if form.errors contains 'email' %}input-error{% endif %}"
                    spellcheck="false"
                    autocomplete="email"
                    autocapitalize="off"
                    placeholder="Enter your email address"
                    value="{{ form.email }}">
            </div>

            <div class="input-wrapper form-row">
              <label for="RegisterPassword">
                Password
              </label>
              <input type="password"
                    name="customer[password]"
                    id="RegisterPassword"
                    class="form-input {% if form.errors contains 'password' %}input-error{% endif %}"
                    placeholder="Create a password (minimum 5 characters)">
              <div class="password-hint">
                Password must be at least 5 characters long
              </div>
            </div>

            <div class="form-checkbox">
              <label class="checkbox-label">
                <input type="checkbox" name="customer[accepts_marketing]" id="RegisterMarketing" {% if form.accepts_marketing %}checked{% endif %}>
                <span class="checkmark"></span>
                I'd like to receive exclusive offers and updates via email
              </label>
            </div>

            <div class="form-action">
              <input type="submit" class="btn btn--secondary btn--fullwidth" value="Create Account">
            </div>

            <div class="form-footer">
              <p class="terms-text">
                By creating an account, you agree to our Terms of Service and Privacy Policy.
              </p>
            </div>

          {% endform %}
        </div>
      </div>

      <!-- Guest Checkout Section -->
      {% if shop.checkout.guest_login %}
        <div class="guest-checkout-section">
          <div class="guest-divider">
            <span class="divider-text">Or</span>
          </div>
          
          <div class="guest-form">
            <h3 class="guest-title">Continue as Guest</h3>
            <p class="guest-subtitle">Shop without creating an account</p>

            {% form 'guest_login' %}
              <input type="submit" class="btn btn--outline btn--fullwidth" value="Continue as Guest">
            {% endform %}
          </div>
        </div>
      {% endif %}

      <!-- Return to Store -->
      <div class="return-store-section">
        <a href="{{ routes.root_url }}" class="return-store-link">
          ‚Üê Return to Store
        </a>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Tab switching functionality
  var authTabs = document.querySelectorAll('.auth-tab');
  var authSections = document.querySelectorAll('.auth-form-section');
  
  function switchTab(tabName) {
    // Remove active class from all tabs and sections
    for (var i = 0; i < authTabs.length; i++) {
      authTabs[i].classList.remove('active');
    }
    for (var i = 0; i < authSections.length; i++) {
      authSections[i].classList.remove('active');
    }
    
    // Add active class to selected tab and section
    var activeTab = document.querySelector('[data-tab="' + tabName + '"]');
    var activeSection = document.getElementById(tabName + '-section');
    
    if (activeTab && activeSection) {
      activeTab.classList.add('active');
      activeSection.classList.add('active');
    }
  }

  // Tab click handlers
  for (var i = 0; i < authTabs.length; i++) {
    authTabs[i].addEventListener('click', function() {
      var tabName = this.getAttribute('data-tab');
      switchTab(tabName);
    });
  }

  // Password recovery functionality
  var recoverPasswordLink = document.getElementById('RecoverPassword');
  var hideRecoverPasswordLink = document.getElementById('HideRecoverPasswordLink');
  var loginForm = document.getElementById('CustomerLoginForm');
  var recoverForm = document.getElementById('RecoverPasswordForm');

  // Show recover password form
  if (recoverPasswordLink) {
    recoverPasswordLink.addEventListener('click', function(e) {
      e.preventDefault();
      if (loginForm) loginForm.classList.add('hide');
      if (recoverForm) recoverForm.classList.remove('hide');
    });
  }

  // Hide recover password form
  if (hideRecoverPasswordLink) {
    hideRecoverPasswordLink.addEventListener('click', function(e) {
      e.preventDefault();
      if (recoverForm) recoverForm.classList.add('hide');
      if (loginForm) loginForm.classList.remove('hide');
    });
  }

  // Password strength indicator
  var passwordInput = document.getElementById('RegisterPassword');
  if (passwordInput) {
    passwordInput.addEventListener('input', function() {
      var password = this.value;
      var hint = this.parentNode.querySelector('.password-hint');
      
      if (password.length === 0) {
        hint.textContent = 'Password must be at least 5 characters long';
        hint.className = 'password-hint';
      } else if (password.length < 5) {
        hint.textContent = 'Password is too short';
        hint.className = 'password-hint weak';
      } else if (password.length >= 5 && password.length < 8) {
        hint.textContent = 'Password strength: Good';
        hint.className = 'password-hint good';
      } else {
        hint.textContent = 'Password strength: Strong';
        hint.className = 'password-hint strong';
      }
    });
  }
});
</script>

<style>
/* Authentication Page Styles */
.container {
  padding: 2rem 0;
  min-height: 80vh;
}

.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.login-header {
  text-align: center;
  margin-bottom: 3rem;
}

.welcome-title {
