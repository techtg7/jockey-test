<script>
document.addEventListener('DOMContentLoaded', function() {
  // Tab switching functionality
  const authTabs = document.querySelectorAll('.auth-tab');
  const authSections = document.querySelectorAll('.auth-form-section');
  
  function switchTab(tabName) {
    // Remove active class from all tabs and sections
    authTabs.forEach(tab => tab.classList.remove('active'));
    authSections.forEach(section => section.classList.remove('active'));
    
    // Add active class to selected tab and section
    const activeTab = document.querySelector(`[data-tab="${tabName}"]`);
    const activeSection = document.getElementById(`${tabName}-section`);
    
    if (activeTab && activeSection) {
      activeTab.classList.add('active');
      activeSection.classList.add('active');
    }
  }

  // Tab click handlers
  authTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const tabName = tab.getAttribute('data-tab');
      switchTab(tabName);
    });
  });

  // Password recovery functionality
  const recoverPasswordLink = document.getElementById('RecoverPassword');
  const hideRecoverPasswordLink = document.getElementById('HideRecoverPasswordLink');
  const loginForm = document.getElementById('CustomerLoginForm');
  const recoverForm = document.getElementById('RecoverPasswordForm');
  const resetSuccess = document.getElementById('ResetSuccess');

  // Show recover password form
  if (recoverPasswordLink) {
    recoverPasswordLink.addEventListener('click', function(e) {
      e.preventDefault();
      loginForm.classList.add('hide');
      recoverForm.classList.remove('hide');
    });
  }

  // Hide recover password form
  if (hideRecoverPasswordLink) {
    hideRecoverPasswordLink.addEventListener('click', function(e) {
      e.preventDefault();
      recoverForm.classList.add('hide');
      loginForm.classList.remove('hide');
    });
  }

  // Check if password reset was successful
  const resetPasswordSuccess = document.querySelector('.reset-password-success');
  if (resetPasswordSuccess) {
    resetSuccess.classList.remove('hide');
    setTimeout(function() {
      recoverForm.classList.add('hide');
      loginForm.classList.remove('hide');
    }, 3000);
  }

  // Form validation and enhancement
  const forms = document.querySelectorAll('form');
  forms.forEach(form => {
    // Add loading state on form submission
    form.addEventListener('submit', function(e) {
      const submitBtn = form.querySelector('button[type="submit"]');
      if (submitBtn && !submitBtn.disabled) {
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Please wait...';
        submitBtn.disabled = true;
        
        // Re-enable after 5 seconds as fallback
        setTimeout(() => {
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        }, 5000);
      }
    });
  });

  // Password strength indicator
  const passwordInput = document.getElementById('RegisterPassword');
  if (passwordInput) {
    passwordInput.addEventListener('input', function() {
      const password = this.value;
      const hint = this.parentNode.querySelector('.password-hint');
      
      if (password.length === 0) {
        hint.textContent = 'Password must be at least 6 characters long';
        hint.className = 'password-hint';
      } else if (password.length < 6) {
        hint.textContent = 'Password is too short';
        hint.className = 'password-hint weak';
      } else if (password.length >= 6 && password.length < 8) {
        hint.textContent = 'Password strength: Good';
        hint.className = 'password-hint good';
      } else {
        hint.textContent = 'Password strength: Strong';
        hint.className = 'password-hint strong';
      }
    });
  }

  // Auto-focus on first input when switching tabs
  function focusFirstInput(section) {
    const firstInput = section.querySelector('input:not([type="hidden"]):not([type="checkbox"])');
    if (firstInput && window.innerWidth > 768) {
      setTimeout(() => firstInput.focus(), 100);
    }
  }

  // Focus on email input when page loads (sign in tab)
  const emailInput = document.getElementById('CustomerEmail');
  if (emailInput && window.innerWidth > 768) {
    emailInput.focus();
  }

  // Update focus when switching tabs
  authTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const tabName = tab.getAttribute('data-tab');
      const section = document.getElementById(`${tabName}-section`);
      if (section) {
        setTimeout(() => focusFirstInput(section), 200);
      }
    });
  });
});
</script>

