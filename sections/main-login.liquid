<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jockey - Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background: #f8f9fa;
            padding: 0;
            position: relative;
            overflow-x: hidden;
        }

        .login-page {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        /* Header */
        .login-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .login-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0 0 0.5rem 0;
            color: #2c3e50;
        }

        .login-header p {
            font-size: 1.1rem;
            color: #7f8c8d;
            margin: 0;
        }

        /* Main Container */
        .login-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            max-width: 900px;
            margin: 0 auto;
        }

        .signin-box,
        .join-cta-box {
            background: #fff;
            border: 1px solid #e0e0e0;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            border-radius: 5px;
        }

        /* Pointy buttons */
        .btn {
            display: inline-block;
            padding: 12px 24px;
            border: 2px solid transparent;
            font-weight: 600;
            cursor: pointer;
            text-align: center;
            font-size: 1rem;
            text-decoration: none;
            transition: all 0.3s ease;
            box-sizing: border-box;
            border-radius: 0 !important; /* Pointy corners */
        }

        .btn-fullwidth {
            width: 100%;
        }

        .btn-primary {
            background: #3498db;
            color: white;
            border-color: #3498db;
        }

        .btn-primary:hover {
            background: #2980b9;
            border-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .btn-black {
            background: #2c3e50;
            color: white;
            border-color: #2c3e50;
        }

        .btn-black:hover {
            background: #1a252f;
            border-color: #1a252f;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .btn-outline {
            background: transparent;
            border-color: #3498db;
            color: #3498db;
        }

        .btn-outline:hover {
            background: #3498db;
            color: white;
        }

        /* Form Elements */
        .input-group {
            margin-bottom: 1.5rem;
        }

        .input-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #2c3e50;
        }

        .input-field {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            font-size: 1rem;
            background: #fafafa;
            transition: all 0.3s ease;
            border-radius: 0; /* Pointy corners */
        }

        .input-field:focus {
            outline: none;
            border-color: #3498db;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(52,152,219,0.1);
        }

        /* Modal Styles - UPDATED to be smaller and prevent overlap */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 10000;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .modal-content {
            background: white;
            width: 100%;
            max-width: 420px; /* Reduced from 500px */
            max-height: 85vh; /* Reduced from 80vh */
            overflow: auto;
            position: relative;
            border-radius: 0;
            box-shadow: 0 5px 25px rgba(0,0,0,0.3);
            animation: modalFadeIn 0.4s ease-out;
        }

        @keyframes modalFadeIn {
            from {
                opacity: 0;
                transform: translateY(-50px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.25rem 1.5rem; /* Reduced padding */
            border-bottom: 1px solid #e0e0e0;
            background: #f8f8f8;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .modal-header h2 {
            font-size: 1.35rem; /* Slightly smaller font */
            font-weight: 600;
            margin: 0;
            color: #2c3e50;
        }

        .modal-close {
            background: none;
            border: none;
            font-size: 1.8rem;
            cursor: pointer;
            color: #7f8c8d;
            padding: 0;
            width: 35px; /* Smaller close button */
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
            z-index: 10001;
        }

        .modal-close:hover {
            color: #e74c3c;
            background: #fff;
            transform: rotate(90deg);
        }

        .modal-body {
            padding: 1.5rem; /* Reduced padding */
        }

        /* Benefits list */
        .benefits-list {
            list-style: none;
            padding: 0;
            margin: 0 0 1.5rem 0; /* Reduced margin */
        }

        .benefits-list li {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.4rem 0; /* Reduced padding */
            font-weight: 500;
            font-size: 0.95rem; /* Slightly smaller font */
        }

        .benefits-list .icon {
            font-size: 1.1rem; /* Smaller icons */
            min-width: 25px;
            color: #3498db;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .login-container {
                grid-template-columns: 1fr;
                gap: 2rem;
            }
            
            .login-header h1 {
                font-size: 2rem;
            }
            
            .signin-box,
            .join-cta-box {
                padding: 1.5rem;
            }
            
            .modal-content {
                max-width: 90%; /* More flexible on mobile */
                max-height: 80vh;
            }
            
            .modal-body {
                padding: 1.25rem;
            }
        }

        @media (max-width: 480px) {
            .login-page {
                padding: 1rem 0.5rem;
            }
            
            .login-header {
                margin-bottom: 2rem;
            }
            
            .login-header h1 {
                font-size: 1.75rem;
            }
            
            .signin-box,
            .join-cta-box {
                padding: 1rem;
            }
            
            .modal-header {
                padding: 1rem 1.25rem;
            }
            
            .modal-header h2 {
                font-size: 1.25rem;
            }
            
            .modal-body {
                padding: 1rem;
            }
            
            .modal-content {
                max-height: 85vh;
            }
        }

        .hide {
            display: none !important;
        }

        .form-success {
            background: #d4edda;
            color: #155724;
            padding: 0.875rem;
            margin-bottom: 1.5rem;
            border: 1px solid #c3e6cb;
            border-radius: 0;
        }

        .errors {
            background: #f8d7da;
            color: #721c24;
            padding: 0.875rem;
            margin-bottom: 1.5rem;
            border: 1px solid #f5c6cb;
            border-radius: 0;
        }

        .forgot-password {
            text-align: right;
            margin-bottom: 1.5rem;
        }

        .forgot-password a {
            color: #3498db;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        .back-link {
            text-align: center;
            margin-top: 1rem;
        }

        .back-link a {
            color: #3498db;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .back-link a:hover {
            text-decoration: underline;
        }

        .form-submit {
            margin-bottom: 1rem;
        }

        .benefits-preview {
            background: #f8f9ff;
            border: 1px solid #e6e9ff;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border-radius: 0;
        }

        .benefits-preview h3 {
            font-size: 1.1rem;
            font-weight: 600;
            margin: 0 0 1rem 0;
            color: #2c3e50;
        }

        .benefits-preview-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .benefits-preview-list li {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            padding: 0.5rem 0;
            font-weight: 500;
            color: #2c3e50;
        }

        .join-note {
            color: #7f8c8d;
            font-size: 0.9rem;
            font-style: italic;
            margin: 10px 0 0 0;
        }

        .auth-header h2,
        .auth-header h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0 0 1rem 0;
            color: #2c3e50;
        }

        .auth-header p {
            color: #7f8c8d;
            margin: 0 0 2rem 0;
        }

        .return-link {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1rem;
            border-top: 1px solid #e0e0e0;
        }

        .return-link a {
            color: #3498db;
            text-decoration: none;
            font-weight: 500;
        }

        .return-link a:hover {
            text-decoration: underline;
        }
        
        .password-help {
            display: block;
            margin-top: 0.5rem;
            color: #7f8c8d;
            font-size: 0.85rem;
        }
        
        .checkbox-group {
            margin: 1.25rem 0; /* Slightly reduced margin */
        }
        
        .checkbox-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
            font-size: 0.95rem; /* Slightly smaller font */
        }
        
        .divider-text {
            text-align: center;
            position: relative;
            margin: 1.5rem 0; /* Reduced margin */
            color: #7f8c8d;
        }
        
        .divider-text::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #e0e0e0;
            z-index: 1;
        }
        
        .divider-text span {
            background: white;
            padding: 0 1rem;
            position: relative;
            z-index: 2;
        }
        
        /* Additional styles for compact form */
        .compact-input {
            margin-bottom: 1rem; /* Reduced spacing between inputs */
        }
    </style>
</head>
<body>
    <div class="login-page">
        <!-- Welcome Header -->
        <div class="login-header">
            <h1>Welcome Back</h1>
            <p>Sign in to your account or join Jockey to start shopping</p>
        </div>

        <!-- Main Login Section -->
        <div class="login-container">
            <!-- Sign In Section -->
            <div class="signin-box">
                <div class="auth-header">
                    <h2>Sign In</h2>
                </div>

                <div class="form-success hide" id="ResetSuccess">
                    Password reset instructions have been sent to your email.
                </div>

                <div id="CustomerLoginForm">
                    <form>
                        <div class="input-group compact-input">
                            <label for="CustomerEmail">Email</label>
                            <input type="email"
                                  name="customer[email]"
                                  id="CustomerEmail"
                                  class="input-field"
                                  placeholder="Enter your email address"
                                  spellcheck="false"
                                  autocomplete="email"
                                  autocapitalize="off">
                        </div>

                        <div class="input-group compact-input">
                            <label for="CustomerPassword">Password</label>
                            <input type="password"
                                  name="customer[password]"
                                  id="CustomerPassword"
                                  class="input-field"
                                  placeholder="Enter your password">
                        </div>

                        <div class="forgot-password">
                            <a href="#" id="RecoverPassword">Forgot Your Password?</a>
                        </div>

                        <div class="form-submit">
                            <input type="submit" class="btn btn-primary btn-fullwidth" value="Sign In">
                        </div>
                    </form>
                </div>

                <!-- Password Recovery Form -->
                <div id="RecoverPasswordForm" class="hide">
                    <div class="auth-header">
                        <h3>Reset Your Password</h3>
                        <p>Enter your email address and we'll send you a link to reset your password.</p>
                    </div>

                    <form>
                        <div class="input-group compact-input">
                            <label for="RecoverEmail">Email</label>
                            <input type="email"
                                  name="email"
                                  id="RecoverEmail"
                                  class="input-field"
                                  placeholder="Enter your email address"
                                  spellcheck="false"
                                  autocomplete="email"
                                  autocapitalize="off">
                        </div>

                        <div class="form-submit">
                            <input type="submit" class="btn btn-primary btn-fullwidth" value="Send Reset Link">
                        </div>

                        <div class="back-link">
                            <a href="#" id="HideRecoverPasswordLink">← Back to Sign In</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Join Jockey CTA Section -->
            <div class="join-cta-box">
                <h2>New to Jockey?</h2>
                <div class="benefits-preview">
                    <h3>Join and enjoy:</h3>
                    <ul class="benefits-preview-list">
                        <li><span class="icon"><i class="fas fa-percent"></i></span> 10% off all the time</li>
                        <li><span class="icon"><i class="fas fa-shipping-fast"></i></span> Free shipping</li>
                        <li><span class="icon"><i class="fas fa-box"></i></span> Easy order tracking</li>
                    </ul>
                </div>
                
                <button class="btn btn-black btn-fullwidth" id="openJoinModal">
                    Join Jockey
                </button>
                
                <p class="join-note">Plus exclusive access to member-only sales!</p>
            </div>
        </div>

        <!-- Return Link -->
        <div class="return-link">
            <a href="#"><i class="fas fa-arrow-left"></i> Return to Store</a>
        </div>
    </div>

    <!-- Join Jockey Modal Popup - UPDATED to be smaller -->
    <div id="joinModal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Join Jockey</h2>
                <button class="modal-close" id="closeModal">&times;</button>
            </div>
            
            <div class="modal-body">
                <div class="benefits-header">
                    <h3>Benefits include</h3>
                    <ul class="benefits-list">
                        <li><span class="icon"><i class="fas fa-percent"></i></span> <strong>10% off all the time</strong></li>
                        <li><span class="icon"><i class="fas fa-shipping-fast"></i></span> <strong>Free shipping</strong></li>
                        <li><span class="icon"><i class="fas fa-box"></i></span> <strong>Easy order tracking</strong></li>
                    </ul>
                </div>

                <form>
                    <div class="input-group compact-input">
                        <label for="RegisterFirstName">First Name</label>
                        <input type="text"
                              name="customer[first_name]"
                              id="RegisterFirstName"
                              class="input-field"
                              placeholder="First name">
                    </div>

                    <div class="input-group compact-input">
                        <label for="RegisterLastName">Last Name</label>
                        <input type="text"
                              name="customer[last_name]"
                              id="RegisterLastName"
                              class="input-field"
                              placeholder="Last name">
                    </div>

                    <div class="input-group compact-input">
                        <label for="RegisterEmail">Email Address</label>
                        <input type="email"
                              name="customer[email]"
                              id="RegisterEmail"
                              class="input-field"
                              placeholder="Enter your email address"
                              spellcheck="false"
                              autocomplete="email"
                              autocapitalize="off">
                    </div>

                    <div class="input-group compact-input">
                        <label for="RegisterPassword">Password</label>
                        <input type="password"
                              name="customer[password]"
                              id="RegisterPassword"
                              class="input-field"
                              placeholder="Create a password">
                        <small class="password-help">Password must be at least 5 characters long</small>
                    </div>

                    <div class="checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" name="customer[accepts_marketing]">
                            I'd like to receive exclusive offers and updates via email
                        </label>
                    </div>

                    <div class="form-submit">
                        <input type="submit" class="btn btn-black btn-fullwidth" value="Create Account">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Simple vanilla JavaScript for modal and password recovery
        (function() {
            // Modal functionality
            var joinModal = document.getElementById('joinModal');
            var openModalBtn = document.getElementById('openJoinModal');
            var closeModalBtn = document.getElementById('closeModal');

            // Open modal
            if (openModalBtn && joinModal) {
                openModalBtn.onclick = function(e) {
                    e.preventDefault();
                    joinModal.style.display = 'flex';
                    document.body.style.overflow = 'hidden';
                    return false;
                };
            }

            // Close modal
            function closeModal() {
                if (joinModal) {
                    joinModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            }

            if (closeModalBtn) {
                closeModalBtn.onclick = closeModal;
            }

            // Close modal when clicking outside
            if (joinModal) {
                joinModal.onclick = function(e) {
                    if (e.target === joinModal) {
                        closeModal();
                    }
                };
            }

            // Close modal with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' || e.keyCode === 27) {
                    closeModal();
                }
            });

            // Password recovery toggle
            var recoverLink = document.getElementById('RecoverPassword');
            var hideRecoverLink = document.getElementById('HideRecoverPasswordLink');
            var loginForm = document.getElementById('CustomerLoginForm');
            var recoverForm = document.getElementById('RecoverPasswordForm');

            if (recoverLink && recoverForm && loginForm) {
                recoverLink.onclick = function(e) {
                    e.preventDefault();
                    loginForm.classList.add('hide');
                    recoverForm.classList.remove('hide');
                    return false;
                };
            }

            if (hideRecoverLink && recoverForm && loginForm) {
                hideRecoverLink.onclick = function(e) {
                    e.preventDefault();
                    recoverForm.classList.add('hide');
                    loginForm.classList.remove('hide');
                    return false;
                };
            }

            // Prevent form submission for demo
            var forms = document.querySelectorAll('form');
            forms.forEach(function(form) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    alert('Form submission disabled for demo purposes.');
                });
            });
        })();
    </script>
</body>
</html>