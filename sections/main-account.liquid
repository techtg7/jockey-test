<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account Dashboard - Shopify</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2c3e50;
            --secondary: #5e72e4;
            --accent: #ff3a29;
            --light: #f8f9fa;
            --dark: #344767;
            --success: #2dce89;
            --warning: #fb6340;
            --danger: #f5365c;
            --gray: #8392ab;
            --white: #ffffff;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
            --border-radius: 12px;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        
        body {
            background-color: #f1f4f9;
            color: #344767;
            line-height: 1.6;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }
        
        .page-width {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .large-row {
            margin-top: 40px;
            margin-bottom: 40px;
        }
        
        .row {
            margin-left: -15px;
            margin-right: -15px;
            display: flex;
            flex-wrap: wrap;
        }
        
        .grid {
            display: flex;
            flex-wrap: wrap;
            margin-left: -15px;
            margin-right: -15px;
        }
        
        .grid__item {
            padding-left: 15px;
            padding-right: 15px;
            flex: 0 0 100%;
            max-width: 100%;
        }
        
        .one-half {
            flex: 0 0 50%;
            max-width: 50%;
        }
        
        .large-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: var(--dark);
        }
        
        .title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--dark);
        }
        
        .text-center {
            text-align: center;
        }
        
        .text-right {
            text-align: right;
        }
        
        .address-card {
            background: var(--white);
            padding: 20px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            margin-bottom: 20px;
        }
        
        .responsive-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: var(--white);
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--shadow);
        }
        
        .responsive-table th,
        .responsive-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }
        
        .responsive-table th {
            background-color: #f8f9fa;
            font-weight: 600;
        }
        
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background: var(--secondary);
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }
        
        .btn:hover {
            background: #4a5bd0;
        }
        
        .btn--secondary {
            background: #f8f9fa;
            color: var(--dark);
        }
        
        .btn--secondary:hover {
            background: #e9ecef;
        }
        
        /* Dashboard Styles */
        .dashboard-container {
            display: flex;
            flex-wrap: wrap;
            margin-top: 30px;
        }
        
        .dashboard-sidebar {
            flex: 0 0 250px;
            max-width: 250px;
            background: var(--primary);
            color: var(--white);
            border-radius: var(--border-radius);
            padding: 20px;
            margin-right: 30px;
        }
        
        .dashboard-content {
            flex: 1;
            min-width: 0;
        }
        
        .user-profile {
            text-align: center;
            padding-bottom: 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 20px;
        }
        
        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: var(--secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 32px;
            color: white;
        }
        
        .user-name {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .user-email {
            font-size: 14px;
            opacity: 0.8;
        }
        
        .nav-menu {
            list-style: none;
        }
        
        .nav-item {
            margin-bottom: 5px;
        }
        
        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: var(--white);
            text-decoration: none;
            transition: var(--transition);
            border-left: 4px solid transparent;
            border-radius: 5px;
        }
        
        .nav-link:hover, .nav-link.active {
            background: rgba(255, 255, 255, 0.1);
            border-left-color: var(--secondary);
        }
        
        .nav-link i {
            margin-right: 12px;
            font-size: 18px;
            width: 24px;
            text-align: center;
        }
        
        .dashboard-section {
            display: none;
            animation: fadeIn 0.5s ease;
            background: var(--white);
            padding: 25px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            margin-bottom: 30px;
        }
        
        .dashboard-section.active {
            display: block;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: var(--white);
            border-radius: 10px;
            padding: 20px;
            box-shadow: var(--shadow);
            display: flex;
            align-items: center;
            transition: var(--transition);
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 20px;
        }
        
        .orders-icon { background: rgba(94, 114, 228, 0.2); color: var(--secondary); }
        .credit-icon { background: rgba(45, 206, 137, 0.2); color: var(--success); }
        .gift-icon { background: rgba(155, 89, 182, 0.2); color: #9b59b6; }
        .returns-icon { background: rgba(251, 99, 64, 0.2); color: var(--warning); }
        
        .stat-info h3 {
            font-size: 24px;
            margin-bottom: 5px;
        }
        
        .stat-info p {
            color: var(--gray);
            font-size: 14px;
        }
        
        .status {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
        }
        
        .status-completed { background: rgba(45, 206, 137, 0.2); color: var(--success); }
        .status-processing { background: rgba(241, 196, 15, 0.2); color: #f1c40f; }
        .status-pending { background: rgba(94, 114, 228, 0.2); color: var(--secondary); }
        .status-cancelled { background: rgba(245, 54, 92, 0.2); color: var(--danger); }
        
        /* Responsive Styles */
        @media (max-width: 992px) {
            .dashboard-sidebar {
                flex: 0 0 100%;
                max-width: 100%;
                margin-right: 0;
                margin-bottom: 20px;
            }
            
            .one-half {
                flex: 0 0 100%;
                max-width: 100%;
            }
            
            .text-right {
                text-align: left;
                margin-top: 10px;
            }
            
            .nav-menu {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
            }
            
            .nav-item {
                margin: 5px;
            }
            
            .nav-link {
                border-left: none;
                border-bottom: 3px solid transparent;
            }
            
            .nav-link:hover, .nav-link.active {
                border-left-color: transparent;
                border-bottom-color: var(--secondary);
            }
        }
        
        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .large-title {
                font-size: 2rem;
            }
            
            .responsive-table {
                display: block;
                overflow-x: auto;
            }
        }
        
        @media (max-width: 576px) {
            .dashboard-container {
                flex-direction: column;
            }
            
            .nav-menu {
                flex-direction: column;
            }
        }
        
        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .mobile-only {
            display: none;
        }
        
        @media (max-width: 768px) {
            .mobile-only {
                display: block;
            }
            
            .no-margin-bottom-mobile {
                margin-bottom: 0;
            }
            
            .small-down--one-whole {
                flex: 0 0 100%;
                max-width: 100%;
            }
            
            .small-down--text-left {
                text-align: left;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-width large-row">
            <h1 class="large-title row no-margin-bottom-mobile center">My Account Dashboard</h1>

            <div class="hidden mobile-only text-center very-large-row-under"><a href="{{ routes.account_logout_url }}">Log Out</a></div>

            <div class="dashboard-container">
                <!-- Sidebar -->
                <div class="dashboard-sidebar">
                    <div class="user-profile">
                        <div class="user-avatar">
                            {{ customer.first_name | slice: 0 | upcase }}{{ customer.last_name | slice: 0 | upcase }}
                        </div>
                        <h3 class="user-name">{{ customer.first_name }} {{ customer.last_name }}</h3>
                        <p class="user-email">{{ customer.email }}</p>
                    </div>
                    
                    <ul class="nav-menu">
                        <li class="nav-item"><a href="#dashboard" class="nav-link active"><i class="fas fa-chart-pie"></i> Dashboard</a></li>
                        <li class="nav-item"><a href="#account-info" class="nav-link"><i class="fas fa-user-circle"></i> Account Info</a></li>
                        <li class="nav-item"><a href="#addresses" class="nav-link"><i class="fas fa-address-book"></i> Addresses</a></li>
                        <li class="nav-item"><a href="#orders" class="nav-link"><i class="fas fa-shopping-bag"></i> Orders</a></li>
                        <li class="nav-item"><a href="#returns" class="nav-link"><i class="fas fa-undo"></i> Returns</a></li>
                        <li class="nav-item"><a href="#credit" class="nav-link"><i class="fas fa-credit-card"></i> Store Credit</a></li>
                        <li class="nav-item"><a href="#offers" class="nav-link"><i class="fas fa-tags"></i> Offers</a></li>
                        <li class="nav-item"><a href="#giftcard" class="nav-link"><i class="fas fa-gift"></i> Gift Card</a></li>
                        <li class="nav-item"><a href="#subscriptions" class="nav-link"><i class="fas fa-sync"></i> Subscriptions</a></li>
                        <li class="nav-item"><a href="#payments" class="nav-link"><i class="fas fa-wallet"></i> Payment Methods</a></li>
                        <li class="nav-item"><a href="{{ routes.account_logout_url }}" class="nav-link"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                    </ul>
                </div>
                
                <!-- Main Content -->
                <div class="dashboard-content">
                    <!-- Dashboard Overview Section -->
                    <div id="dashboard" class="dashboard-section active">
                        <h2 class="title">Account Overview</h2>
                        
                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="stat-icon orders-icon">
                                    <i class="fas fa-shopping-bag"></i>
                                </div>
                                <div class="stat-info">
                                    <h3>{{ customer.orders_count }}</h3>
                                    <p>Total Orders</p>
                                </div>
                            </div>
                            
                            <div class="stat-card">
                                <div class="stat-icon credit-icon">
                                    <i class="fas fa-credit-card"></i>
                                </div>
                                <div class="stat-info">
                                    <h3>
                                        {% if customer.tags contains 'store_credit' %}
                                            {{ customer.metafields.store_credit.balance | money }}
                                        {% else %}
                                            $0.00
                                        {% endif %}
                                    </h3>
                                    <p>Store Credit</p>
                                </div>
                            </div>
                            
                            <div class="stat-card">
                                <div class="stat-icon gift-icon">
                                    <i class="fas fa-gift"></i>
                                </div>
                                <div class="stat-info">
                                    <h3>
                                        {% if customer.gift_cards.size > 0 %}
                                            {{ customer.gift_cards.first.balance | money }}
                                        {% else %}
                                            $0.00
                                        {% endif %}
                                    </h3>
                                    <p>Gift Card Balance</p>
                                </div>
                            </div>
                            
                            <div class="stat-card">
                                <div class="stat-icon returns-icon">
                                    <i class="fas fa-undo"></i>
                                </div>
                                <div class="stat-info">
                                    <h3>
                                        {% if customer.metafields.returns.count %}
                                            {{ customer.metafields.returns.count }}
                                        {% else %}
                                            0
                                        {% endif %}
                                    </h3>
                                    <p>Pending Returns</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="large-row">
                            <div class="grid row">
                                <div class="grid__item one-half small-down--one-whole">
                                    <h2 class="title">Account Details</h2>
                                </div>
                                <div class="grid__item one-half small-down--one-whole text-right small-down--text-left">
                                    <a class="standard-link" href="{{ routes.account_addresses_url }}">View Addresses ({{ customer.addresses_count }})</a>
                                </div>
                            </div>

                            {% if customer.addresses_count > 0 %}
                                <div class="grid row">
                                    <div class="grid__item one-half small-down--one-whole">
                                        <div class="address-card">
                                            {{ customer.default_address | format_address }}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <div class="large-row">
                            <h2 class="title">Recent Orders</h2>

                            {% if customer.orders.size != 0 %}
                                <table class="responsive-table">
                                    <thead>
                                        <tr>
                                            <th>Order #</th>
                                            <th>Date</th>
                                            <th>Payment Status</th>
                                            <th>Fulfillment Status</th>
                                            <th class="text-right">Total</th>
                                            <td>&nbsp;</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for order in customer.orders limit:3 %}
                                            <tr class="responsive-table-row">
                                                <td data-label="Order #">{{ order.name | link_to: order.customer_url }}</td>
                                                <td data-label="Date">{{ order.created_at | date: "%b %d, %Y" }}</td>
                                                <td data-label="Payment Status">
                                                    <span class="status status-{{ order.financial_status_label | downcase }}">
                                                        {{ order.financial_status_label }}
                                                    </span>
                                                </td>
                                                <td data-label="Fulfillment Status">
                                                    <span class="status status-{{ order.fulfillment_status_label | downcase }}">
                                                        {{ order.fulfillment_status_label }}
                                                    </span>
                                                </td>
                                                <td class="text-right" data-label="Total">{{ order.total_price | money }}</td>
                                                <td class="text-right"><a class="btn btn--secondary" href="{{ order.customer_url }}">View Order</a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            {% else %}
                                <p>You haven't placed any orders yet.</p>
                            {% endif %}
                        </div>
                    </div>
                    
                    <!-- Account Information Section -->
                    <div id="account-info" class="dashboard-section">
                        <h2 class="title">Account Information</h2>
                        
                        <div class="address-card">
                            <p><strong>Name:</strong> {{ customer.first_name }} {{ customer.last_name }}</p>
                            <p><strong>Email:</strong> {{ customer.email }}</p>
                            <p><strong>Phone:</strong> 
                                {% if customer.phone != blank %}
                                    {{ customer.phone }}
                                {% else %}
                                    Not provided
                                {% endif %}
                            </p>
                        </div>
                        
                        <div class="address-card">
                            <h3 class="title">Newsletter Preferences</h3>
                            <p>
                                {% if customer.accepts_marketing %}
                                    You are currently subscribed to our weekly newsletter and promotional offers.
                                {% else %}
                                    You are not subscribed to our marketing emails.
                                {% endif %}
                            </p>
                            <a href="#" class="btn">Update Preferences</a>
                        </div>
                    </div>
                    
                    <!-- Address Book Section -->
                    <div id="addresses" class="dashboard-section">
                        <h2 class="title">Address Book</h2>
                        
                        <div class="grid row">
                            <div class="grid__item one-half small-down--one-whole">
                                <h3 class="title">Default Address</h3>
                            </div>
                            <div class="grid__item one-half small-down--one-whole text-right small-down--text-left">
                                <a class="standard-link" href="{{ routes.account_addresses_url }}">Manage Addresses</a>
                            </div>
                        </div>

                        {% if customer.addresses_count > 0 %}
                            <div class="grid row">
                                <div class="grid__item one-half small-down--one-whole">
                                    <div class="address-card">
                                        {{ customer.default_address | format_address }}
                                        <div style="margin-top: 15px;">
                                            <a href="{{ routes.account_addresses_url }}" class="btn btn--secondary">Edit Address</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <p>You haven't added any addresses yet.</p>
                            <a href="{{ routes.account_addresses_url }}" class="btn">Add New Address</a>
                        {% endif %}
                    </div>
                    
                    <!-- Orders Section -->
                    <div id="orders" class="dashboard-section">
                        <h2 class="title">Order History</h2>

                        {% if customer.orders.size != 0 %}
                            <table class="responsive-table">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Payment Status</th>
                                        <th>Fulfillment Status</th>
                                        <th class="text-right">Total</th>
                                        <td>&nbsp;</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for order in customer.orders %}
                                        <tr class="responsive-table-row">
                                            <td data-label="Order #">{{ order.name | link_to: order.customer_url }}</td>
                                            <td data-label="Date">{{ order.created_at | date: "%b %d, %Y" }}</td>
                                            <td data-label="Payment Status">
                                                <span class="status status-{{ order.financial_status_label | downcase }}">
                                                    {{ order.financial_status_label }}
                                                </span>
                                            </td>
                                            <td data-label="Fulfillment Status">
                                                <span class="status status-{{ order.fulfillment_status_label | downcase }}">
                                                    {{ order.fulfillment_status_label }}
                                                </span>
                                            </td>
                                            <td class="text-right" data-label="Total">{{ order.total_price | money }}</td>
                                            <td class="text-right"><a class="btn btn--secondary" href="{{ order.customer_url }}">View Order</a></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p>You haven't placed any orders yet.</p>
                            <a href="/collections/all" class="btn">Start Shopping</a>
                        {% endif %}
                    </div>
                    
                    <!-- Other sections would be implemented similarly -->
                    <div id="returns" class="dashboard-section">
                        <h2 class="title">My Returns</h2>
                        <div class="address-card">
                            <p>You don't have any returns at this time.</p>
                            <a href="#" class="btn">Initiate a Return</a>
                        </div>
                    </div>
                    
                    <div id="credit" class="dashboard-section">
                        <h2 class="title">Store Credit</h2>
                        <div class="address-card">
                            <h3>Your Balance: 
                                {% if customer.tags contains 'store_credit' %}
                                    {{ customer.metafields.store_credit.balance | money }}
                                {% else %}
                                    $0.00
                                {% endif %}
                            </h3>
                            <p>Use your store credit towards future purchases.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab navigation functionality
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('.dashboard-section');
            
            navLinks.forEach(link => {
                if(link.getAttribute('href') !== '/account/logout') {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        
                        // Remove active class from all links and sections
                        navLinks.forEach(navLink => navLink.classList.remove('active'));
                        sections.forEach(section => section.classList.remove('active'));
                        
                        // Add active class to current link and section
                        this.classList.add('active');
                        const targetSection = document.querySelector(this.getAttribute('href'));
                        if(targetSection) {
                            targetSection.classList.add('active');
                        }
                    });
                }
            });
            
            // Simulate loading of other sections
            const sectionTitles = {
                '#offers': 'Offers',
                '#giftcard': 'Gift Card',
                '#subscriptions': 'Subscriptions',
                '#payments': 'Payment Methods'
            };
            
            for (const [id, title] of Object.entries(sectionTitles)) {
                const section = document.querySelector(id);
                if (section) {
                    section.innerHTML = `
                        <h2 class="title">${title}</h2>
                        <div class="address-card">
                            <div style="text-align: center; padding: 40px 20px;">
                                <div style="font-size: 48px; color: var(--gray); margin-bottom: 20px;">
                                    <i class="fas fa-cog"></i>
                                </div>
                                <h3 style="margin-bottom: 15px;">${title} Section</h3>
                                <p style="color: var(--gray);">This section would display your ${title.toLowerCase()} information.</p>
                            </div>
                        </div>
                    `;
                }
            }
        });
    </script>
</body>
</html>